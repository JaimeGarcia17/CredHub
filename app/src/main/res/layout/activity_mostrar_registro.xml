<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarRegistro"
    android:background="@color/colorPrimaryDark">

    <View
        android:id="@+id/auxiliarMostrar"
        android:layout_height="1dp"
        android:layout_width="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/showRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ¡s detalles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textoIdentificador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identificador"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/showRegister"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/muestraIdentificador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="15dp"
        android:layout_below="@id/textoIdentificador"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textoUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/muestraIdentificador"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/muestraUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        android:textSize="15dp"
        android:layout_below="@id/textoUsername"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textoPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/muestraUsername"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:textSize="15dp"
        android:layout_below="@id/textoPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/muestraPassword"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoPassword"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/inputPassword"
        android:drawableLeft="@drawable/iconopassword" />

    <Button
        android:id="@+id/goToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Home"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/actualizarRegistro"
        android:drawableLeft="@drawable/iconohome"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/exportarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Exportar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputPassword"
        android:layout_toLeftOf="@id/actualizarRegistro"
        android:drawableLeft="@drawable/iconoexportar"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/eliminarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Eliminar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputPassword"
        android:layout_toRightOf="@id/actualizarRegistro"
        android:drawableLeft="@drawable/iconoeliminarregistro"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/actualizarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Guardar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputPassword"
        android:drawableLeft="@drawable/iconoactualizar"
        android:layout_marginTop="30dp"/>


</RelativeLayout>